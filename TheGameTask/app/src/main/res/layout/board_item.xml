<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_cell">

    <ImageView
        android:id="@+id/img_place_holder1"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_margin="2dp"
        android:background="@drawable/border_circular"
        android:contentDescription="@string/player_place_holder1"
        android:padding="2dp"
        android:src="@drawable/ic_player_1"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_place_holder2"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_below="@+id/img_place_holder1"
        android:layout_margin="2dp"
        android:background="@drawable/border_circular"
        android:contentDescription="@string/player_place_holder2"
        android:padding="2dp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/tv_cell_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/img_place_holder1"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

</RelativeLayout>